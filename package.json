  "bugs": {
    "url": "https://github.com/phillipluther/tactical-focus/issues"
  },
  "homepage": "https://github.com/phillipluther/tactical-focus#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "jsdom": "^24.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.2.0",
    "rollup": "^4.9.6"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
