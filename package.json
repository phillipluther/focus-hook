    "demo": "pnpm build",
    "pub": "pnpm dlx np",
    "prepub": "pnpm build",
    "test": "mocha src/**/*.test.mjs",
    "preserve": "pnpm demo",
    "serve": "pnpm dlx http-server docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phillipluther/tactical-focus.git"
  },
  "keywords": [
    "focus",
    "outline",
    "accessibility",
    "keyboard",
    "mouse",
    "navigation"
